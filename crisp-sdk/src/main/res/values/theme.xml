<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CrispFragmentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/CrispFragmentAnim</item>
    </style>

    <style name="CrispFragmentAnim">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_down_dialog</item>
    </style>
</resources>